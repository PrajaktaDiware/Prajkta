<style>
    .s2 {
        margin-left: 1020px;
    }

    .s1 {
        text-align: center;
    }
    nav{
        margin-left:900px;
    }
    #myInput{
        width:auto;
        height:40px;
    }
</style>

<h2 class="s1">Employee Portal</h2>
