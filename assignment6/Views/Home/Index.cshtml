    <div class="col-lg-4 col-lg-offset-4">
        <input type="search" id="search" value="" class="form-control" placeholder="Search">
    </div>
</div>*@
<div class="progress">
    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
         aria-valuenow="50" aria-valuemin="0" aria-valuemax="50" style="width:50%">
        50% Complete (success)
    </div>
</div>

<table class="table table-bordered table-hover table-responsive table-striped" id="myTable" >
    <tr>

        <th>
            <i class="fa fa-caret-down" aria-hidden="true"></i>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            <i class="fa fa-caret-down" aria-hidden="true"></i>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <i class="fa fa-caret-down" aria-hidden="true"></i>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            <i class="fa fa-caret-down" aria-hidden="true"></i>
            @Html.DisplayNameFor(model => model.MaritalStatus)
        </th>
       
        <th>
            <i class="fa fa-caret-down" aria-hidden="true"></i>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaritalStatus)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
             

                @Html.ActionLink("Delete", "Delete", new { id = item.Id })

            </td>
        </tr>
    }

</table>
<nav aria-label="Page navigation example">
